@model NZWalks.UI.Models.AddRegionViewModel

@{
}

<h1 class="mt-3">Add Region</h1>

<form method="post">

	<div class="mt-3">
		<label class="form-label">Code</label>
		<input type="text" class="form-control" asp-for="Code" />
	</div>
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Area</label>
		<input type="text" class="form-control" asp-for="Area" />
	</div>
	<div class="mt-3">
		<label class="form-label">Lat</label>
		<input type="text" class="form-control" asp-for="Lat" />
	</div>
	<div class="mt-3">
		<label class="form-label">Long</label>
		<input type="text" class="form-control" asp-for="Long" />
	</div>
	<div class="mt-3">
		<label class="form-label">Population</label>
		<input type="text" class="form-control" asp-for="Population" />
	</div>
	<div class="mt-3">
		<label class="form-label">Image URL</label>
		<input type="text" class="form-control" asp-for="RegionImageUrl" />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>

</form>